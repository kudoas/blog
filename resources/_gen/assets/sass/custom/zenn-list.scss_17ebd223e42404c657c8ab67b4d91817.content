.zenn-list{margin:1.5rem 0;padding:1rem;border:1px solid var(--theme-divider,#e0e0e0);border-radius:12px;background:linear-gradient(135deg,rgba(0,0,0,2%),rgba(0,0,0,5%))}.zenn-list__header{display:flex;justify-content:space-between;align-items:center;margin-bottom:.75rem}.zenn-list__title{margin:0}.zenn-list__more{text-decoration:none;color:var(--theme-accent,#06c);font-weight:600}.zenn-list__items{list-style:none;padding:0;margin:0;display:grid;gap:.5rem}.zenn-list__item{padding:.65rem .75rem;border-radius:10px;transition:background .2s ease,transform .2s ease}.zenn-list__item:hover{background:rgba(0,0,0,4%);transform:translateY(-1px)}.zenn-list__link{display:grid;grid-template-columns:auto 1fr auto;gap:.6rem;align-items:center;color:inherit;text-decoration:none}.zenn-list__emoji{font-size:1.35rem}.zenn-list__meta{display:flex;flex-direction:column;gap:.15rem}.zenn-list__title-text{font-weight:600;line-height:1.35}.zenn-list__date{color:#666}.zenn-list__likes{color:#b2002d;font-weight:600}@media(max-width:600px){.zenn-list__link{grid-template-columns:auto 1fr;grid-template-areas:"emoji title" "emoji date"}.zenn-list__emoji{grid-area:emoji}.zenn-list__meta{grid-area:title}.zenn-list__likes{display:none}}.summary-classic--zenn .summary-classic__external{display:inline-flex;align-items:center;gap:.25rem;margin-left:.4rem;padding:.1rem .4rem;border-radius:999px;background:rgba(0,102,204,.1);color:var(--theme-accent,#06c);font-size:.8em;font-weight:700}